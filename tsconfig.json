{
  "compilerOptions": {
    "outDir": "./dist",   // Diretório de saída dos arquivos compilados
    "rootDir": "./",   // Diretório onde os arquivos .ts estão
    "module": "CommonJS", // Módulo padrão para Node.js
    "target": "ES6",       // Versão do JavaScript para saída
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": ["src/*.ts", "src/**/*.ts", "tests/*.ts", "tests/**/*.ts"] // Diretórios a serem incluídos na compilação
}
